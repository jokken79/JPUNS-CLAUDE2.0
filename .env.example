# UNS-ClaudeJP 2.0 - Environment Variables Example
# Copy this file to .env and configure your values

# ============================================
# DATABASE CONFIGURATION
# ============================================
DB_PASSWORD=change_this_password
DATABASE_URL=postgresql://uns_admin:change_this_password@db:5432/uns_claudejp

# ============================================
# SECURITY
# ============================================
SECRET_KEY=change-this-secret-key-to-something-random
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ============================================
# API CONFIGURATION
# ============================================
API_URL=http://localhost:8000
FRONTEND_URL=http://localhost:3000

# ============================================
# FILE UPLOAD
# ============================================
MAX_UPLOAD_SIZE=10485760
ALLOWED_EXTENSIONS=pdf,jpg,jpeg,png,xlsx,xls
UPLOAD_DIR=/app/uploads

# ============================================
# OCR CONFIGURATION (Hybrid System)
# ============================================
OCR_ENABLED=true
TESSERACT_LANG=jpn+eng

# Gemini API (Primary OCR - Get your key from: https://makersuite.google.com/app/apikey)
GEMINI_API_KEY=YOUR_GEMINI_API_KEY_HERE

# Google Cloud Vision API (Backup OCR - Optional)
GOOGLE_CLOUD_VISION_ENABLED=false
GOOGLE_CLOUD_VISION_API_KEY=YOUR_VISION_API_KEY_HERE
GOOGLE_APPLICATION_CREDENTIALS=/app/config/gcp-credentials.json

# ============================================
# EMAIL/SMTP NOTIFICATIONS
# ============================================
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-gmail-app-password
SMTP_FROM=noreply@uns-kikaku.com

# ============================================
# LINE NOTIFICATIONS (Optional)
# ============================================
LINE_CHANNEL_ACCESS_TOKEN=YOUR_LINE_CHANNEL_TOKEN_HERE

# ============================================
# WHATSAPP NOTIFICATIONS (Optional)
# ============================================
WHATSAPP_ENABLED=false
WHATSAPP_TOKEN=YOUR_WHATSAPP_TOKEN
WHATSAPP_PHONE_ID=YOUR_PHONE_ID

# ============================================
# REPORTS CONFIGURATION
# ============================================
REPORTS_DIR=/app/reports
REPORTS_LOGO_PATH=/app/config/logo.png

# ============================================
# COMPANY INFORMATION
# ============================================
COMPANY_NAME=UNS-Kikaku
COMPANY_WEBSITE=https://uns-kikaku.com
COMPANY_EMAIL=info@uns-kikaku.com
COMPANY_PHONE=+81-XX-XXXX-XXXX

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=INFO
LOG_FILE=/app/logs/uns-claudejp.log

# ============================================
# DEVELOPMENT / PRODUCTION
# ============================================
ENVIRONMENT=development
DEBUG=true
